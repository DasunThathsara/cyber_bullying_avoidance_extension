{
  "manifest_version": 3,
  "name": "Shieldy",
  "version": "1.0",
  "description": "Prevents sending and searching for inappropriate text on all websites and the URL bar.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1:8001/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "popup.html", "popup.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  }
}